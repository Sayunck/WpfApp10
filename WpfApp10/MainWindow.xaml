<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Открыть"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem Header="Команды">

            </MenuItem>
            <MenuItem Header="Справка" Click="MenuItem_Click"></MenuItem>
        </Menu>
        <DataGrid x:Name="Tabl" Margin="0,35,0,277" Grid.ColumnSpan ="2" SelectionChanged="Tabl_SelectionChanged" />
        <GroupBox Header="Таблица" Margin="0,168,463,28">
            <Grid>
                <TextBox x:Name="Count" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="randMax" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                <Button x:Name="Rasch_Click" Content="Создать" HorizontalAlignment="Left" Margin="100,158,0,0" Click="miCreate_Click" VerticalAlignment="Top" Width="88"/>
                <Button x:Name="Button_Click_2" Content="Заполнить" HorizontalAlignment="Left" Margin="100,111,0,0" VerticalAlignment="Top" Width="88" Height="22" Click="miFill_Click"/>
                <Label Content="-количество колонок&#xD;&#xA;" HorizontalAlignment="Left" Margin="135,5,0,0" VerticalAlignment="Top" Height="28" Width="127"/>
                <Label Content="-диапазон&#xD;&#xA;" HorizontalAlignment="Left" Margin="135,42,0,0" VerticalAlignment="Top" Height="24" Width="118"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Решение" Margin="370,168,10,161">
            <Grid>
                <Button x:Name="Button_Click_4" Content="Решение" HorizontalAlignment="Left" Margin="88,29,0,0" VerticalAlignment="Top" Click="miCalc_Click"/>

                <TextBox x:Name="tbRez" HorizontalAlignment="Left" Margin="204,30,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="77" Height="19" IsEnabled="False"/>
            </Grid>
        </GroupBox>
        <Button x:Name="Button_Click_3" Content="Очистить" HorizontalAlignment="Left" Margin="401,296,0,0" VerticalAlignment="Top" Click="miClear_Click" Height="19" Width="305" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.082"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="Button_Click" Content="Выход" HorizontalAlignment="Left" Margin="400,333,0,0" VerticalAlignment="Top" Height="20" Width="307" Click="Button_Click"/>
        <Button x:Name="Button_Click_1" Content="О программе" HorizontalAlignment="Left" Margin="400,371,0,0" VerticalAlignment="Top" Height="20" Width="307" Click="Prog2_Click"/>




    </Grid>
</Window>
